{% extends 'base.html.twig' %}

{% block title %}Détails du projet - {{ project.name }}{% endblock %}

{% block body %}
<div class="container mt-5">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Détails du projet</h4>
            <span class="badge bg-light text-dark">ID #{{ project.id }}</span>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">{{ project.name }}</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">{{ project.description }}</dd>

                <dt class="col-sm-3">Date de début</dt>
                <dd class="col-sm-9">
                    {{ project.startDate ? project.startDate|date('d/m/Y H:i') : '—' }}
                </dd>

                <dt class="col-sm-3">Date de fin</dt>
                <dd class="col-sm-9">
                    {{ project.endDate ? project.endDate|date('d/m/Y H:i') : '—' }}
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <a href="{{ path('app_project_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
            <div class="d-flex gap-2">
                <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-square"></i> Modifier
                </a>
                {{ include('project/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

</div>
{% endblock %}
