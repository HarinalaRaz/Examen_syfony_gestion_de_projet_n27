{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des projets</h1>

    <a href="{{ path('app_project_new') }}" class="btn btn-success mb-3">
        <i class="bi bi-plus-lg"></i> Créer un nouveau projet
    </a>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col">Date de début</th>
                <th scope="col">Date de fin</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <th scope="row">{{ project.id }}</th>
                <td>{{ project.name }}</td>
                <td>{{ project.description|length > 50 ? project.description[:50] ~ '...' : project.description }}</td>
                <td>{{ project.startDate ? project.startDate|date('d/m/Y') : '—' }}</td>
                <td>{{ project.endDate ? project.endDate|date('d/m/Y') : '—' }}</td>
                <td class="text-center">
                    <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-info btn-sm me-1" title="Voir">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center fst-italic">Aucun projet trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
